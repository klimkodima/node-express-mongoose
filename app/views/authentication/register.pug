extends ../layouts/default.pug

block content
	#top
	//section begin
	section.dark
		.container
			.row
				.col-lg-12.wow.fadeInRight
					h2.title Pегистрация
				.col-lg-3.wow.fadeInRight
				.col-lg-6.wow.fadeInRight
					.title-underline
					form(name="contactForm" id="register_form" class="row form-default wow fadeInRight" data-wow-delay=".25s" method="post" action="/register" enctype="multipart/form-data")
						.col-md-12.text-center
							.field-set
								input(type="text" name="username" id="username" class="form-control" placeholder="e-mail")
							.line-fx
							.field-set
								input(type="password" name="password" id="password" class="form-control" placeholder="Пароль")
							.line-fx
							.field-set
								input(type="password" name="confirmPassword" id="confirmPassword" class="form-control" placeholder="Подтвердите пароль")
							.line-fx
						
						.spacer-single
						.col-md-12.text-center
							#submit
								input(type="submit" id="register" value="Отправить" class="btn btn-custom color-2")
							.spacer-single
							a(href='/')
								button.btn.btn-custom.color-2(type="button") Отмена
						#register_fail.error Возникла ошибка при отправке вопроса.
	//section close
	